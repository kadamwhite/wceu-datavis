.hover {
  fill: #888;
  stroke: #212121;
}
.selected {
  fill: #494949;
  stroke: #212121;
}
.edge {
  stroke-width: 1px;
  stroke: #b1b1b1;
}

.tooltip {
  text-anchor: middle;
  font-size: 40px;
}
