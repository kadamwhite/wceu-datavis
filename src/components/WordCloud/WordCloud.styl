.container {
  max-width: 320px;
  display: inline-block;
  padding: 0 20px 20px 0;
}
.svg {
  max-width: 100%;
}

.rect {
  fill: #9ab8ca;
  &:hover {
    fill: #eeb141;
  }
}

.text {
  font-family: "League Gothic", Impact, sans-serif;
  transition: text-anchor 200ms, transform 400ms;
}
.rect {
  transition: height 400ms, y 400ms;
}
